{
  "name": "prello-backend",
  "version": "0.1.0",
  "description": "Prello's backend applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/awi2017-option1group1/Prello-back.git"
  },
  "author": "Photon Team",
  "license": "MIT",
  "engines": {
    "node": "8.3.0"
  },
  "scripts": {
    "start": "node dist/src/server.js",
    "start:dev": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "migrations": "node runMigrations.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setupTests.ts"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.2",
    "class-validator": "^0.7.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.14.0",
    "lodash": "^4.17.4",
    "nodemailer": "^4.3.1",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.83.0",
    "socket.io": "^2.0.4",
    "socket.io-redis": "^5.2.0",
    "typeorm": "^0.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "0.0.33",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.37",
    "@types/jest": "^19.2.2",
    "@types/lodash": "^4.14.77",
    "@types/node": "^7.0.43",
    "@types/nodemailer": "^3.1.5",
    "@types/request": "^2.0.7",
    "@types/socket.io": "^1.4.31",
    "@types/socket.io-redis": "^1.0.22",
    "@types/supertest": "^2.0.3",
    "concurrently": "^3.5.0",
    "jest": "^19.0.2",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  }
}
